<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.SettingsActivity"
    >

    <RelativeLayout
        android:id="@+id/rl_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:text="counts"/>
        <TextView
            android:id="@+id/tv_bombsPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:text="bombs percentage"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_settingsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_caption"
        android:layout_above="@id/ll_settings"
        />

    <LinearLayout
        android:id="@+id/ll_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_save"
        android:orientation="vertical"
        >


        <com.surovtsev.cool_3d_minesweeper.utils.android_view.components.MyIntSeekBar
            android:id="@+id/ivs_xCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <com.surovtsev.cool_3d_minesweeper.utils.android_view.components.MyIntSeekBar
            android:id="@+id/ivs_yCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <com.surovtsev.cool_3d_minesweeper.utils.android_view.components.MyIntSeekBar
            android:id="@+id/ivs_zCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.surovtsev.cool_3d_minesweeper.utils.android_view.components.MyIntSeekBar
            android:id="@+id/ivs_bombsPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="save"
        />

</RelativeLayout>